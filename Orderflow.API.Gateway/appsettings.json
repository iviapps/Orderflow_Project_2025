{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-public": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "anonymous",
        "Match": {
          "Path": "/api/v{version}/auth/{**catch-all}"
        }
      },
      "identity-admin-users": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "authenticated",
        "Match": {
          "Path": "/api/v{version}/admin/users/{**catch-all}"
        }
      },
      "identity-admin-roles": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "authenticated",
        "Match": {
          "Path": "/api/v{version}/admin/roles/{**catch-all}"
        }
      },
      "identity-protected": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "authenticated",
        "Match": {
          "Path": "/api/v{version}/users/{**catch-all}"
        }
      },
      "catalog-categories": {
        "ClusterId": "catalog-cluster",
        "AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "anonymous",
        "Match": {
          "Path": "/api/v{version}/categories/{**catch-all}"
        }
      },
      "catalog-products": {
        "ClusterId": "catalog-cluster",
        "AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "anonymous",
        "Match": {
          "Path": "/api/v{version}/products/{**catch-all}"
        }
      },
      "orders-user": {
        "ClusterId": "orders-cluster",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "authenticated",
        "Match": {
          "Path": "/api/v{version}/orders/{**catch-all}"
        }
      },
      "orders-admin": {
        "ClusterId": "orders-cluster",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "authenticated",
        "Match": {
          "Path": "/api/v{version}/admin/orders/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "https://orderflow-identity"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "catalog-service": {
            "Address": "https://orderflow-catalog"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-service": {
            "Address": "https://orderflow-orders"
          }
        }
      }
    }
  }
}
